<h1 class="company-header">Company List</h1>

<div class="company-list animated-container">
  <% @companies.each do |company| %>
    <div class="company-card animated-step">
      <p><strong>Name:</strong> <%= company.name %></p>
      <p><strong>Description:</strong> <%= company.description %></p>
      <p><strong>City:</strong> <%= company.city %></p>
      <p><strong>State:</strong> <%= company.state %></p>
      <p><strong>Zip:</strong> <%= company.zip %></p>
      <p><strong>Country:</strong> <%= company.country %></p>
      <p><strong>Website:</strong> <%= link_to company.website, company.website, target: "_blank", class: "company-link" %></p>
      <%= link_to 'View Details', company_path(company), class: 'btn-view-details' %>
    </div>
  <% end %>
</div>


<script type="text/javascript">
  $(document).ready(function() {
    $('.animated-step').each(function(index) {
      $(this).css('transition-delay', index * 100 + 'ms').addClass('slide-in');
    });
  });
</script>

<style>
  .company-header {
    font-size: 2.5rem;
    color: #ff6b6b;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    text-align: center;
    margin-top: 30px;
    animation: fadeIn 1s ease;
  }

  .company-list {
    max-width: 800px;
    margin: 40px auto;
    padding: 30px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .company-card {
    flex: 1 1 calc(33% - 20px);
    padding: 20px;
    border-radius: 20px;
    background: linear-gradient(45deg, #ff9a9e, #fad0c4, #fbc2eb);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .company-card p {
    margin-bottom: 10px;
    font-size: 1rem;
    color: #444;
    transition: all 0.3s ease;
  }

  .company-link {
    color: #007bff;
    text-decoration: underline;
    font-weight: bold;
  }

  .company-link:hover {
    color: #0056b3;
    text-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
  }

  .btn-view-details, .btn-add {
    display: inline-block;
    padding: 10px 20px;
    margin-top: 10px;
    background-color: #6a1b9a;
    color: #fff;
    border-radius: 30px;
    text-align: center;
    text-transform: uppercase;
    font-weight: bold;
    transition: background-color 0.3s ease;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.15);
  }

  .btn-view-details:hover, .btn-add:hover {
    background-color: #4a148c;
    box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.3);
  }

  @keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes slideIn {
    0% { transform: translateY(30px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
  }

  .slide-in {
    animation: slideIn 0.5s forwards;
  }
</style>
